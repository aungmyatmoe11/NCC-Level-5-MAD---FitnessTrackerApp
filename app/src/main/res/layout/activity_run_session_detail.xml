<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Map to display the run route -->
    <fragment
        android:id="@+id/mapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <!-- TextView to display total distance -->
    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: 5.0 km"
        android:layout_below="@id/mapFragment"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

    <!-- TextView to display total time -->
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 1 hour"
        android:layout_below="@id/distanceTextView"
        android:layout_marginTop="8dp"
        android:textSize="18sp" />

    <!-- RecyclerView to display individual locations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/locationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeTextView"
        android:layout_marginTop="16dp" />

</RelativeLayout>